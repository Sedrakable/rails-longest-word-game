<h1>New Game</h1>

<div class="container">
<% @letters.each do |letter|%>
  <div class="box">
    <%= letter %>
  </div>
<% end %>
</div>

<div class="container">
  <form action="/score" method="set">
    <input class="input" type="text" name="word" placeholder="Input the longest word?">
    <input name="letters" value="<%= @letters.join(", ") %>" type="hidden" />
    <input class="button" type="submit">
  </form>

  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</div>
